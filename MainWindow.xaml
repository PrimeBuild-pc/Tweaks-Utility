<Window x:Class="SystemOptimizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemOptimizer"
        mc:Ignorable="d"
        Title="System Optimizer" 
        Height="650" 
        Width="950"
        Background="{StaticResource BackgroundColor}"
        ResizeMode="CanResize"
        MinHeight="500"
        MinWidth="800">
    
    <Window.Resources>
        <!-- Animation for the button -->
        <Style x:Key="AnimatedButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF8C00"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" Color="#FF6B00" BlurRadius="15" Opacity="0.8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E06000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryColor}" 
                Padding="20,10">
            <TextBlock Text="System Optimizer" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center"/>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- System Info Panel -->
            <Border Grid.Row="0" 
                    Background="{StaticResource SecondaryColor}" 
                    Padding="15" 
                    Margin="0,0,0,20" 
                    CornerRadius="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="CPU:" FontWeight="Bold" Foreground="{StaticResource TextColor}"/>
                        <TextBlock Text="{Binding CpuInfo}" Margin="10,0,0,10" Foreground="{StaticResource TextColor}"/>
                        
                        <TextBlock Text="RAM:" FontWeight="Bold" Foreground="{StaticResource TextColor}"/>
                        <TextBlock Text="{Binding RamInfo}" Margin="10,0,0,10" Foreground="{StaticResource TextColor}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="GPU:" FontWeight="Bold" Foreground="{StaticResource TextColor}"/>
                        <TextBlock Text="{Binding GpuInfo}" Margin="10,0,0,10" Foreground="{StaticResource TextColor}"/>
                        
                        <TextBlock Text="Storage:" FontWeight="Bold" Foreground="{StaticResource TextColor}"/>
                        <TextBlock Text="{Binding StorageInfo}" Margin="10,0,0,10" Foreground="{StaticResource TextColor}"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Control Panel -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="1" HorizontalAlignment="Center">
                    <Button Content="OPTIMIZE NOW" 
                            Command="{Binding OptimizeCommand}" 
                            Width="220" 
                            Height="60" 
                            Margin="0,10" 
                            Style="{StaticResource AnimatedButton}"/>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                        <Ellipse x:Name="StatusIndicator" Width="12" Height="12" Fill="Green" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource TextColor}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
            
            <!-- Progress -->
            <StackPanel Grid.Row="2" Margin="0,10,0,20">
                <TextBlock Text="{Binding CurrentTask}" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,5" 
                           Foreground="{StaticResource TextColor}"/>
                <ProgressBar Height="20" 
                             Value="{Binding Progress}" 
                             Maximum="1" 
                             IsIndeterminate="{Binding IsOptimizing}"
                             Foreground="{StaticResource PrimaryColor}"
                             Background="#333333"/>
            </StackPanel>
            
            <!-- Console -->
            <Border Grid.Row="3" 
                    Background="#1E1E1E" 
                    BorderBrush="Gray" 
                    BorderThickness="1" 
                    CornerRadius="3"
                    MinHeight="150">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBox x:Name="ConsoleOutput"
                             Height="Auto"
                             MinHeight="150" 
                             Background="Transparent" 
                             BorderThickness="0" 
                             Foreground="LightGray" 
                             FontFamily="Consolas" 
                             Padding="5" 
                             Text="{Binding ConsoleText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             IsReadOnly="True" 
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"/>
                </ScrollViewer>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="{StaticResource SecondaryColor}">
            <StatusBarItem>
                <TextBlock Text="{Binding WindowsVersion}" Foreground="{StaticResource TextColor}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="{Binding SystemStatus}" Foreground="{StaticResource TextColor}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
