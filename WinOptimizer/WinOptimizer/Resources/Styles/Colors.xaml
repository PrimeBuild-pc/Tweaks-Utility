<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Primary Colors -->
    <Color x:Key="PrimaryBlack">#FF1E1E1E</Color>
    <Color x:Key="PrimaryGray">#FF2D2D2D</Color>
    <Color x:Key="AccentWhite">#FFFFFFFF</Color>
    <Color x:Key="AccentOrange">#FFFFA500</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource PrimaryBlack}"/>
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="{StaticResource PrimaryGray}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource AccentWhite}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentOrange}"/>
</ResourceDictionary>